{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/strictest/tsconfig.json", "@tsconfig/node18/tsconfig.json"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "rootDir": "lib",
    "outDir": "types",
    "moduleResolution": "node16",
    "types": ["node"],

    "noUncheckedIndexedAccess": false
  },
  "include": ["lib"]
}
