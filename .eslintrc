{
  "extends": ["eslint:recommended", "prettier"],

  "env": {
    "node": true,
    "commonjs": true,
    "es2020": true
  },
  "rules": {
    "no-console": "error"
  },
  "overrides": [
    {
      "files": ["lib/**/*.ts"],
      "parser": "@typescript-eslint/parser"
    },
    {
      "files": ["./test/**/*", "./integration/**/*"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "env": {
        "mocha": true
      },
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
